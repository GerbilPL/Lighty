{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "andi_makes"
  ],
  "contributors": [
    "agnor99",
    "Alveel",
    "poqli"
  ],
  "contact": {
    "sources": "https://github.com/SchmarrnDevs/Lighty",
    "issues": "${issue_url}"
  },
  "license": "${mod_license}",
  "icon": "icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.schmarrn.lighty.fabric.LightyFabric"
    ],
    "modmenu": [
      "dev.schmarrn.lighty.fabric.ModMenuIntegration"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "minecraft": ">=${minecraft_version_lower_bound}",
    "fabric-api-base": "*",
    "fabric-lifecycle-events-v1": "*",
    "fabric-rendering-v1": "*",
    "fabric-resource-loader-v0": "*",
    "fabric-key-binding-api-v1": "*"
  },
  "recommends": {
    "modmenu": ">=${modmenu_version}"
  }
}
